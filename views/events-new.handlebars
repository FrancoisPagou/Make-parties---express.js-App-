<!-- views/events-new.handlebars -->

<div class="col-lg-6 offset-lg-3">
    <form method="POST" action="/events">
        <fieldset>
            <legend>New Event</legend>
            <p>
                <label for="title">Title</label><br>
                <input type="text" name="title" />
            </p>
            <p>
                <label for="desc">Movie Title</label><br>
                <input type="text" name="desc" />
            </p>
            <p>
                <label for="imgUrl">Image Url</label><br>
                <input type="text" placeholder="" name="imgUrl" />
            </p>
            <p>
                <label for="date">Date</label>
                <input type="date" name="takesPlaceOn"  />
            </p>
        </fieldset>
        <p><button type="submit">Save Event</button></p>
    </form>
</div>